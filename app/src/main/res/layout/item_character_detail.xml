<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_characterDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_itemCharacterDetail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="Loading..."
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_itemCharacterDetail_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="@+id/textView_itemCharacterDetail_unlock"
        app:layout_constraintStart_toStartOf="@+id/textView_itemCharacterDetail_unlock"
        app:layout_constraintTop_toBottomOf="@+id/textView_itemCharacterDetail_unlock" />

    <TextView
        android:id="@+id/textView_itemCharacterDetail_unlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Normal Attack"
        app:layout_constraintEnd_toEndOf="@+id/textView_itemCharacterDetail_name"
        app:layout_constraintStart_toStartOf="@+id/textView_itemCharacterDetail_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_itemCharacterDetail_name" />
</androidx.constraintlayout.widget.ConstraintLayout>