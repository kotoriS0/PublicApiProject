<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtifactDetailActivity">

    <TextView
        android:id="@+id/textView_artifactDetail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Loading..."
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_artifactDetail_maxRarityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="Max Rarity"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_artifactDetail_name" />

    <TextView
        android:id="@+id/textView_artifactDetail_maxRarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/textView_artifactDetail_maxRarityLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_artifactDetail_maxRarityLabel" />

    <TextView
        android:id="@+id/textView_artifactDetail_bonusesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Set Bonuses"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_artifactDetail_maxRarityLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_artifactDetail_maxRarityLabel" />

    <TextView
        android:id="@+id/textView_artifactDetail_twoPieceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="2-Piece"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_artifactDetail_bonusesLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_artifactDetail_bonusesLabel" />

    <TextView
        android:id="@+id/textView_artifactDetail_fourPieceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="4-Piece"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_artifactDetail_twoPieceLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_artifactDetail_twoPieceBonus" />

    <TextView
        android:id="@+id/textView_artifactDetail_twoPieceBonus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:text="None"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_artifactDetail_twoPieceLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_artifactDetail_twoPieceLabel" />

    <TextView
        android:id="@+id/textView_artifactDetail_fourPieceBonus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="None"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_artifactDetail_twoPieceBonus"
        app:layout_constraintTop_toTopOf="@+id/textView_artifactDetail_fourPieceLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>